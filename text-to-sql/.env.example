ORACLE_TNS_ADMIN=

# RAG
RAG_PERSIST_DIR=var/rag
RAG_TOP_K=5
RAG_EMBEDDING_DIM=128

# MongoDB (RAG store)
MONGO_URI=
MONGO_DB=text_to_sql
MONGO_COLLECTION=rag_docs
MONGO_VECTOR_INDEX=

# Logs
EVENTS_LOG_PATH=var/logs/events.jsonl
